{% extends 'baseAdmin.html.twig' %}


{% block body %}


	<div id="content-wrapper" class="d-flex flex-column">
		<div
			id="content">


			<!-- Container Fluid-->
			<div class="container-fluid" id="container-wrapper">


				<div class="row mt-3">
					<div class="col-lg-12">
						<div class="alert alert-success" style="display: none" role="alert">
							<button type="button" class="close hide-close" aria-label="Close">
								<span aria-hidden="true">Ã—</span>
							</button>
							<p class="m-0"></p>
						</div>
						<div class="col-sm-12 col-md-4 pr-3 text-right">
							<a class="btn btn-primary" href="{{path('app_category_create')}}">
								<i class="fas fa-plus"></i>
								Add New Category
							</a>
						</div>
						<br>
						<div class="card mb-4">
							<div class="table-responsive p-3">
								<table id="geniustable" class="table table-hover dt-responsive" cellspacing="0" width="100%">
									<thead class="thead-light">
										<tr>
											<th>Category's Name</th>
											<th>Description</th>

											<th>Options</th>
										</tr>

									</thead>

									<tr>
										{% for c in categories %}
											<tr>

												<td>{{c.name}}</td>
												<td>{{c.description}}</td>
												<td>
													<ul>
														<li style="display : flex;">
															<i class="fa-solid fa-trash" style="margin-right:5px;margin-top:4px;"></i>
															<a href="{{path('remove_category',{'id':c.id})}}">Delete</a>
														</li>
														<li style="display:flex;">
															<i class="fa-solid fa-pen-to-square" style="margin-right:5px;margin-top:3px;"></i>
															<a href="{{path('update_category',{'id':c.id})}}">Update</a>
														</li>
													</ul>
												</td>

											</tr>
										{% endfor %}
									</tr>
								</table>
							</div>
						</div>
					</div>
				</div>

				{% block footer %}{% endblock %}

			{% endblock %}
