{% extends 'base.html.twig' %}

{% block body %}


<!-- Hero -->
<section class="hero-section bg--overlay bg_img" data-img="assets/images/4oHWW9wP1647317756.html">
    <div class="container">
        <div class="hero-content">
            <h2 class="hero-title">Blog</h2>
            <ul class="breadcrumb">
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    {{category.name}} </li>
            </ul>
        </div>
    </div>
</section>
<!-- Hero -->

<!-- Blog -->
<section class="blog-section pt-100 pb-100">
    <div class="container">
        <div class="row justify-content-center gy-4">
            {% for c in blogs %}
            <div class="col-lg-4 col-md-6 col-sm-10">
                <div class="blog__item">
                    <div class="blog__item-img">
                        <a href="#">
                            <img src="{{asset('/uploads/photos/'~c.photo)}}">
                        </a>
                    </div>
                    <div class="blog__item-content">
                        <div class="d-flex flex-wrap justify-content-between meta-post">
                            <span><i class="far fa-user"></i> Admin</span>
                        </div>
                        <h5 class="blog__item-content-title">
                            <a href="#">
                                {{c.name}}
                            </a>
                        </h5>
                        <a href="{{path('details_blog',{'id':c.id})}}" class="read-more">Read More</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <ul class="pagination">

        </ul>
    </div>
</section>
<!-- Blog -->




<button onclick="topFunction()" id="myBtn" title="Go to top" style="float:right;"><i
        class="fas fa-angle-up"></i></button>
<script>
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("myBtn").style.display = "block";
        } else {
            document.getElementById("myBtn").style.display = "none";
        }
    }

    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>

{% endblock %}