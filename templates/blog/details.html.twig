{% extends 'base.html.twig'%}

{% block body %}
<!-- Hero -->
<section class="hero-section bg--overlay bg_img">
    <div class="container">
        <div class="hero-content">
            <h2 class="hero-title">{{blog.name}}</h2>
            <ul class="breadcrumb">
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="{{path('app_actualite')}}">Blogs</a>
                </li>
            </ul>
        </div>
    </div>
</section>
<!-- Hero -->

<!-- Blog -->
<section class="blog-section pt-100 pb-100">
    <div class="container">
        <div class="row gy-5">
            <div class="col-lg-8">
                <div class="blog__item blog__item-details">
                    <div class="blog__item-img">
                        <img src="{{asset('/uploads/photos/'~blog.photo)}}" alt="blog">
                    </div>
                    <div class="blog__item-content">
                        <div class="d-flex flex-wrap justify-content-between meta-post">
                            <span><i class="far fa-user"></i> Admin</span>
                        </div>
                        <h5 class="blog__item-content-title">
                            {{blog.name}}
                        </h5>
                    </div>
                    <div class="blog__details">
                        <p>{{blog.details}}</p>
                        <p>

                        <div id="disqus_thread"></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <aside class="blog-sidebar ps-xxl-5">
                    <div class="widget">
                        <div class="widget-header text-center">
                            <h5 class="m-0 text-white">Latest Blog Posts</h5>
                        </div>
                        <div class="widget-body">
                            <ul class="latest-posts">
                                {% for i in blogs|slice(0,3) %}
                                <li>
                                    <a href="{{path('details_blog',{'id':i.id})}}">
                                        <div class="img">
                                            <img src="{{asset('/uploads/photos/'~i.photo)}}" alt="blog">
                                        </div>
                                        <div class="cont">
                                            <h5 class="subtitle">{{i.name}}</h5>
                                            <span class="date">{{i.description}}</span>
                                        </div>
                                    </a>
                                </li>
                                {% endfor %}

                            </ul>
                        </div>
                    </div>
                    <div class="widget">
                        <div class="widget-header text-center">
                            <h5 class="m-0 text-white">Category</h5>
                        </div>
                        <div class="widget-body">
                            <ul class="archive-links">
                                {% for c in categories %}
                                <li>
                                    <a href="{{path('app_blog_category',{'id':c.id})}}">
                                        <span>{{c.name}}</span>
                                        <span>&nbsp;</span>
                                    </a>
                                </li>
                                {% endfor %}

                            </ul>
                        </div>
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
<!-- Blog -->



{% endblock %}