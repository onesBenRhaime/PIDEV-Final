{% extends 'baseAdmin.html.twig' %}


{% block body %}

	<div id="content-wrapper" class="d-flex flex-column">
		<div
			id="content">


			<!-- Container Fluid-->
			<div class="container-fluid" id="container-wrapper">
				<div class="col-sm-12 col-md-4 pr-3 text-right">
					<a class="btn btn-primary" href="{{path('app_agence_create')}}">
						<i class="fas fa-plus"></i>
						Add New Agency
					</a>
				</div>
				<br>

				<div class="row mt-3">
					<div class="col-lg-12">
						<div class="alert alert-success" style="display: none" role="alert">
							<button type="button" class="close hide-close" aria-label="Close">
								<span aria-hidden="true">Ã—</span>
							</button>
							<p class="m-0"></p>
						</div>

						<div class="card mb-4">
							<div class="table-responsive p-3">
								<table id="geniustable" class="table table-hover dt-responsive" cellspacing="0" width="100%">
									<thead class="thead-light">
										<tr>
											<th>Photo</th>
											<th>Agence's Name</th>
											<th>Description</th>
											<th>Options</th>
										</tr>

									</thead>

									<tr>
										{% for c in agences %}
											<tr>
												<td><img src="{{asset('/uploads/photos/'~c.photo)}}"></td>
												<td>{{c.name}}</td>
												<td>{{c.description}}</td>
												<td>
													<ul>
														<li style="display : flex;">
															<i class="fa-solid fa-trash" style="margin-right:5px;margin-top:4px;"></i>
															<a href="{{path('remove_agence',{'id':c.id})}}">Delete</a>
														</li>
														<li style="display:flex;">
															<i class="fa-solid fa-pen-to-square" style="margin-right:5px;margin-top:3px;"></i>
															<a href="{{path('update_agence',{'id':c.id})}}">Update</a>
														</li>
														<li style="display:flex;">
															<i class="fa fa-download" style="margin-right:5px;margin-top:3px;"></i>
															<a href="{{path('app_agence_download',{'id':c.id})}}">Download</a>
														</li>
													</ul>
												</td>

											</tr>
										{% endfor %}
									</tr>
								</table>
							</div>
						</div>
					</div>
				</div>


				<button onclick="topFunction()" id="myBtn" title="Go to top" style="float:right;">
					<i class="fas fa-angle-up"></i>
				</button>
				<script>
					window.onscroll = function () {
scrollFunction()
};

function scrollFunction() {
if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
document.getElementById("myBtn").style.display = "block";
} else {
document.getElementById("myBtn").style.display = "none";
}
}

function topFunction() {
document.body.scrollTop = 0;
document.documentElement.scrollTop = 0;
}
				</script>
				{% block footer %}{% endblock %}

			{% endblock %}
