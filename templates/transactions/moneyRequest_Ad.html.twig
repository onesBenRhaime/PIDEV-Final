{% extends 'baseAdmin.html.twig' %}

{% block body %}
        <!-- Container Fluid-->
          <div class="container-fluid" id="container-wrapper">
            <div class="card">
              <div
                class="d-sm-flex align-items-center justify-content-between py-3"
              >
                <h5 class="mb-0 text-gray-800 pl-3">Request Money Transactions</h5>
                <ol class="breadcrumb m-0 py-0">
                  <li class="breadcrumb-item">
                    <a
                      href="#"
                      >Dashboard</a
                    >
                  </li>
                  <li class="breadcrumb-item">
                    <a
                      href="#"
                      >Request Money</a
                    >
                  </li>
                </ol>
              </div>
            </div>

            <div class="row mt-3">
              <div class="col-lg-12">               
                <div class="card mb-4">
                  <div class="table-responsive p-3">
                    <table
                      id="geniustable"
                      class="table table-hover dt-responsive"
                      cellspacing="0"
                      width="100%"
                    >
                      <thead class="thead-light">
                        <tr>
                          <th>Date</th>
                          <th>Agance Name</th>
                           <th>Account Number</th>
                           <th>Amount</th>
                          <th>Request From</th>
                          <th>Request To</th>
                          <th>Status</th>
                        </tr>
                      </thead>
                      <tbody>
          {% for transaction in transactions %}
             {% if  transaction.typeTransaction == "Send Money" %}
              <tr>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d') : '' }}</td>
                <td>{{ transaction.agenceName }}</td>
                <td>{{ transaction.compte }}</td>
                <td>{{ transaction.montant }}</td>
                <td>{{ transaction.requestFrom }}</td>
                <td>{{ transaction.requestTo }}</td>
                {% if  transaction.statue == "valide" %}
                    <td><span class="badge bg-success">{{ transaction.statue }}</span></td>
                {% elseif transaction.statue == "rejected" %}
                <td><span class="badge bg-danger">{{ transaction.statue }}</span></td>
                {% else %}
                    <td><span class="badge bg-warning">{{ transaction.statue }}</span></td>                          
                {% endif %}
                
              </tr>
             {% endif %}
          {% else %}
              <tr>
                <td colspan="9">no records found</td>
             </tr>
            {% endfor %}
        </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!---Container Fluid-->
        
{% endblock %}
