



{% extends 'baseClient.html.twig' %}

{% block body %}
    
    <div class="page-wrapper">
        <div class="container-xl">
          <div class="page-header d-print-none">
            <div class="row align-items-center">
              <div class="col">
                <h2 class="page-title">Wire Transfer : Edit </h2>
              </div>
            </div>
          </div>
        </div>

        <div class="page-body">
          <div class="container-xl">
            <div class="row row-cards">
              <div class="col-12">
                <div class="card p-5">
                  <div
                    class="gocover"
                    style="
                      background: url(https://product.geniusocean.com/genius-bank/assets/images/5monWltX1641808745.gif)
                        no-repeat scroll center center rgba(45, 45, 45, 0.5);
                    "
                  ></div>

                {{ form_start(form) }} 
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group mb-3 mt-3">
                                {{form_label(form.agenceName,'Account Type : ',{'attr':{'class':'form-label'}})}}
                                {{form_widget(form.agenceName ,{'attr':{'class':'form-select'}}  ) }}    
                         
                        </div>
                      </div>

                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group mb-3 mt-3">
                                {{form_label(form.compte,'Account Number : ',{'attr':{'class':'form-label'}})}}
                                {{form_widget(form.compte,{'attr':{'class':'form-control'}})}}                                
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group mb-3 mt-3">
                                {{form_label(form.montant,'Amount : ',{'attr':{'class':'form-label'}})}}
                                {{form_widget(form.montant,{'attr':{'class':'form-control'}})}}  
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group mb-3 mt-3">
                              {{form_label(form.requestFrom,'Request From : ',{'attr':{'class':'form-label'}})}}
                              {{form_widget(form.requestFrom,{'attr':{'class':'form-control'}})}}  
                         
                        </div>
                      </div>

                      <div class="col-md-6">
                        <div class="form-group mb-3 mt-3">
                            {{form_label(form.requestTo,'Request To : ',{'attr':{'class':'form-label'}})}}
                            {{form_widget(form.requestTo,{'attr':{'class':'form-control'}})}}  
                        </div>
                      </div>
                    </div>
                     <div class="form-footer">
                     <fieldset>
                        <button type= "submit" class="btn btn-success"> Update ! </button>
                    </fieldset>
                       {# {{form_widget(form.save,{'attr':{'class':'btn btn-primary w-100'}})}}  #}
                    </div>
                   
                {{form_end(form)}}
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>



{% endblock %}





